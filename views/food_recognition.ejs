      <script>
        const gender_sel = $('#gender_sel');
        const age_sel = $('#age_sel');
        const level_sel = $('#level_sel');
        

        $('.custom-select').change(function () {

          const g = gender_sel.val();
          const a = age_sel.val();
          const l = level_sel.val();

          let h = g === 'm' ? 100 : 80;

          h += a * 2;
          h += l * 200;

          $('#my_info').html(h + "卡");
          $('#my_lastinfo').html(2000 - h + "卡");
        });



      </script>

